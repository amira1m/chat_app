<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/receiver_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/receiver_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/recv" />

        <TextView
            android:id="@+id/output"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/receiver_icon"
            android:layout_marginStart="8dp"
            android:background="@drawable/recv_box"
            android:backgroundTint="#af7ac5"
            android:padding="14dp"
            android:text="This is a sample message that will appear"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="visible" />
    </RelativeLayout>

</RelativeLayout>